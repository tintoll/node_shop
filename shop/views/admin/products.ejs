<% include ../header.ejs %>

  <% include ./sidebar.ejs %>
  <div class="col-sm-10">
    <table class="table table-table-bordered table-hover">
      <tr>
        <th>제목</th>
        <th>작성일</th>
        <th>삭제</th>
      </tr>
      <% products.forEach( function(product) { %>
      <tr>
        <td><a href="/admin/products/detail/<%=product.id%>"><%=product.name%></td>
        <td>
          <%=product.getDate.year%>-<%=product.getDate.month%>-<%=product.getDate.day%>
        </td>
        <td>
          <a href="/admin/products/delete/<%=product.id%>" class="btn btn-danger">삭제</a>
        </td>
      </tr>
      <% }); %>
    </table>

    <nav>
      <ul class="pagination">
          <li>
              <a href="<%= paginate.href(true) %>" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
              </a>
          </li>
      <% pages.forEach(function(page){ %>
          <li class="<%= paginate.page == page.number ? 'active' : ''%>">
              <a href="<%= page.url %>"><%= page.number %></a>
          </li>
      <%})%>

      <%if(paginate.hasNextPages(pageCount)){%>
          <li>
              <a href="<%= paginate.href() %>">
                  <span aria-hidden="true">&raquo;</span>
              </a>
          </li>
      <%}%>
      </ul>
  </nav>

    <%if(isLogin){%>
    <a href="/admin/products/write" class="btn btn-default">작성하기</a>
    <%}else{%>
    <a href="/accounts/login" class="btn btn-primary">로그인하기</a>
    <%}%>
</div>  
<% include ../footer.ejs %>